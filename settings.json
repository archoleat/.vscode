{
  // Security
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  // Update
  "update.showReleaseNotes": false,
  // Window
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  // Workbench
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "GitHub Dark",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  // Editor
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.detectIndentation": false,
  "editor.folding": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.hover.above": false,
  "editor.hover.enabled": false,
  "editor.hover.sticky": false,
  "editor.inlayHints.enabled": "off",
  "editor.insertSpaces": true,
  "editor.lightbulb.enabled": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": false,
  "editor.parameterHints.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-_=+[{]}\\|;:'\",.<>/?",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Navigation
  "breadcrumbs.enabled": false,
  // Files
  "files.autoSave": "afterDelay",
  // Git
  "diffEditor.ignoreTrimWhitespace": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 10,
  "git.confirmSync": false,
  "git.ignoreLimitWarning": true,
  "git.pruneOnFetch": true,
  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Extensions
  "extensions.ignoreRecommendations": true,
  // NPM
  "npm.fetchOnlinePackageInfo": false,
  // javaScript and typeScript
  "javascript.suggest.paths": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.paths": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // SCSS
  "scss.format.enable": false,
  "scss.format.spaceAroundSelectorSeparator": true,
  "scss.lint.duplicateProperties": "error",
  "scss.lint.important": "warning",
  "scss.showErrors": true,
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "scssFormatter.printWidth": 85,
  // Pug
  "pugFormatter.removeDiv": true,
  // Path-intellisense
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": true,
  "path-intellisense.ignoreTsConfigBaseUrl": true,
  "path-intellisense.mappings": {
    "@scss": "${workspaceRoot}/src/scss",
    "@img": "${workspaceRoot}/src/img",
    "@ts": "${workspaceRoot}/src/js"
  },
  "path-intellisense.showHiddenFiles": true,
  "redhat.telemetry.enabled": true
}
